<!-- Create HTML content for the handlebars body-->
<div class="col-md-10 col-md-offset-1">
  <h2 class="uneaten-title">Current Burgers</h2>
  <ul class="uneaten">
 <!-- Button and Graphic for Burger to be Devoured-->  
    {{#each burgers}}
      {{#unless this.devoured}}
        <li>
          <img src="../assets/images/cuteburger.png" width="100px">
          <p>
            {{this.burger_name}}
          </p>
          <form action="burgers/update/{{this.id}}?_method=PUT" method="POST">
            <input type="hidden" name="devoured" value="true">
            <button type="submit" class="btn btn-default" style="background-color:red; color:yellow; padding: 15px">Chow Down!</button>
          </form>
        </li>
      {{/unless}}
    {{/each}}
  </ul>
 
</div>
 <!-- Add a burger form and submit button--> 
<div class="row">
  <div class="col-md-2"></div>
    <div class="col-md-4" id="update">
      <br><br><br>
        <form class="create-update-form" action="burgers/create" method="POST">
          <h2 class="add-title">Add a Burger</h2>
          <div class="form-group">
            <label for="newBurger">Burger Name:</label>
            <input type="hidden" name="devoured" value="0">
            <input type="text" id="newBurger" name="burger_name">
          <button type="submit" class="btn btn-default" style="background-color:yellow; color:red">Add Burger</button>
        </form>
      </div>
    </div>
 <!-- List of burgers eaten--> 
    <div class="col-md-4" id="eaten">
      <br><br><br>
      <h2 class="eaten-title">Eaten Burgers</h2>
      <ul class="burgers-eaten">
        {{#each burgers}}
          {{#if this.devoured}}
            <li>
              <p>
                {{this.burger_name}}
              <img src="../assets/images/hamburger-bitten.png" width="50px">
              </p>
            </li>
            <form action="burgers/update/{{this.id}}?_method=PUT" method="POST">
             <input type="hidden" name="devoured" value="false">
          {{/if}}
        {{/each}}
      </ul>
    </div>
    <div class="col-md-2"></div>
</div>